{
  "expo": {
    "name": "ScanToPayApp",
    "slug": "ScanToPayApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "newArchEnabled": true, 
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.silvo.ScanToPayApp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.silvo.ScanToPayApp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Scan2Pay to access your camera",
          "microphonePermission": "Allow Scan2Pay to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow Scan2Pay to access camera."
        }
      ]
    ]
  }
}